    private void jRadioButton2MouseClicked(java.awt.event.MouseEvent evt) {                                           
        // linking to a games interface
        jRadioButton2.setVisible(true);
       this.dispose();
       
       //linking to another interface. Creating objects
       GenreDashboard dash = new GenreDashboard();
       dash.setVisible(true);

    }                                          

    private void jRadioButton1MouseClicked(java.awt.event.MouseEvent evt) {                                           
        jRadioButton1.setVisible(true);
        this.dispose();
        
        //taking user to profile
        myProfil prof = new myProfil();
        prof.setVisible(true);
        
    }                                          

